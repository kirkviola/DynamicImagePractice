<Window x:Class="DynamicImagePractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicImagePractice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources >
        <ResourceDictionary>
            <ImageSource x:Key="Ron">/Images/Ron_Weasley_poster.jpg</ImageSource>
            <ImageSource x:Key="Harry">/Images/Harry_Potter_character_poster.jpg</ImageSource>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Image x:Name="Harry" HorizontalAlignment="Left" Height="232" Margin="305,120,0,0" VerticalAlignment="Top" Width="162" SourceUpdated="Harry_SourceUpdated" Source="/Ron_Weasley_poster.jpg"/>

    </Grid>
</Window>
